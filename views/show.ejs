        <h2>Destinations</h2>
        <% for (let destination of flight.destinations) { %>
            <p> <%= destination.airport %></p>
            <p> <%= destination.arrival %></p>
            <p><form method="POST" action="/flights/<%=flight._id%>/<%=destination._id%>?_method=DELETE"><button type="submit">Delete</button></p>
        <% } %>
